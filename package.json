{
  "name": "awesomeyou",
  "version": "0.1.0",
  "license": "AGPL-3.0-only",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wellwelwel"
  },
  "scripts": {
    "prestart": "tsx tools/host.mts",
    "start": "concurrently \"npm run start:website\" \"npm run start:server\"",
    "start:website": "docusaurus start --host 0.0.0.0 --port 6060",
    "start:server": "wrangler dev --ip 0.0.0.0",
    "build:maintainers": "tsx --env-file-if-exists=.env tools/generate-maintainers.mts",
    "build:projects": "tsx --env-file-if-exists=.env tools/generate-projects.mts",
    "build:cache": "tsx --env-file-if-exists=.env tools/generate-maintainers-cache.mts",
    "build:server": "rollup -c && cp -f wrangler.prod.jsonc server/wrangler.jsonc",
    "prebuild": "tsx tools/generate-resume.mts",
    "build": "tsx tools/generate-maintainers-cache.mts && docusaurus build && npm run build:server",
    "postbuild": "tsx tools/modify-sitemap.mts && tsx tools/generate-llms.mts",
    "clear": "docusaurus clear",
    "reset": "(npm run clear || true) && rm -rf node_modules package-lock.json && npm i",
    "prepreview": "npm run build && tsx tools/host.mts",
    "preview": "docusaurus serve --port 6060",
    "typecheck": "tsc",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "update": "pu minor && npm i && (npm audit fix || true)",
    "postupdate": "npm run lint:fix",
    "purge": "tsx --env-file-if-exists=.env tools/purge-cache.mts",
    "prefetch": "mkdir -p static/assets/json",
    "fetch": "git fetch https://github.com/wellwelwel/awesomeyou.git website:website && git checkout FETCH_HEAD -- assets/json/",
    "postfetch": "cp -r assets/json/* static/assets/json/ && rm -rf assets && git reset -q HEAD -- .",
    "pretest": "npm run fetch && npm run build:maintainers && npm run build:projects && npm run build:cache",
    "test": "poku -r=compact",
    "posttest": "npm run typecheck && npm run lint"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250702.0",
    "@docusaurus/core": "^3.8.1",
    "@docusaurus/module-type-aliases": "3.8.1",
    "@docusaurus/preset-classic": "3.8.1",
    "@docusaurus/tsconfig": "3.8.1",
    "@docusaurus/types": "3.8.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@mdx-js/react": "^3.1.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webpack-env": "^1.18.8",
    "@types/xml2js": "^0.4.14",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "animejs": "^4.0.2",
    "comment-mark": "^2.0.1",
    "concurrently": "^9.2.0",
    "docusaurus-plugin-sass": "^0.2.6",
    "lru.min": "^1.1.2",
    "lucide-react": "^0.525.0",
    "packages-update": "^2.0.0",
    "poku": "^3.0.2",
    "prettier": "^3.6.2",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-parallax-tilt": "^1.7.299",
    "react-typed": "^2.0.12",
    "rollup": "^4.44.1",
    "sass": "^1.89.2",
    "sonner": "^2.0.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "wrangler": "^4.22.0",
    "xml2js": "^0.6.2"
  },
  "browserslist": {
    "production": [
      ">0%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  },
  "private": true
}
